<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="calculatorFragment"
            type="com.example.calculator.view.CalculatorFragment" />
        <variable
            name="viewModel"
            type="com.example.calculator.viewmodel.CalculatorViewModel" />
    </data>

    <GridLayout
        android:id="@+id/calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/clearAll"
            style="@style/Widget.Calculator.CalcButton"

            android:fontFamily="sans-serif-condensed"
            android:text="@string/all_cleared"
            android:textColor="@color/calc_function_button"
            android:textSize="@dimen/button_ac_text_size"

            android:layout_marginStart="@dimen/button_margin"
            android:layout_marginTop="@dimen/button_margin" />

        <ImageButton
            android:id="@+id/clear"
            android:src="@drawable/clear_ic"

            android:padding="@dimen/btn_padding_default"
            android:layout_marginTop="@dimen/button_margin"

            style="@style/Widget.Calculator.CalcButton" />

        <ImageButton
            android:id="@+id/percent"
            style="@style/Widget.Calculator.CalcButton"

            android:padding="@dimen/btn_padding_default"
            android:layout_marginTop="@dimen/button_margin"

            android:src="@drawable/percentage_ic" />

        <ImageButton
            android:id="@+id/divide"
            style="@style/Widget.Calculator.CalcButton"

            android:padding="@dimen/btn_padding_default"
            android:layout_marginTop="@dimen/button_margin"

            android:src="@drawable/divide_ic" />

        <ImageButton
            android:id="@+id/number_7"
            style="@style/Widget.Calculator.CalcButton"

            app:tint="?android:attr/textColorPrimary"

            android:padding="@dimen/btn_padding_default"
            android:layout_marginStart="@dimen/button_margin"

            android:src="@drawable/seven_ic" />

        <ImageButton
            android:id="@+id/number_8"
            style="@style/Widget.Calculator.CalcButton"

            app:tint="?android:attr/textColorPrimary"

            android:padding="@dimen/btn_padding_default"

            android:src="@drawable/eight_ic"/>

        <ImageButton
            android:id="@+id/number_9"
            style="@style/Widget.Calculator.CalcButton"

            app:tint="?android:attr/textColorPrimary"

            android:padding="@dimen/btn_padding_default"

            android:src="@drawable/nine_ic" />

        <ImageButton
            android:id="@+id/multiply"
            style="@style/Widget.Calculator.CalcButton"

            android:padding="@dimen/btn_padding_default"

            android:src="@drawable/multiply_ic" />

        <ImageButton
            android:id="@+id/number_4"
            style="@style/Widget.Calculator.CalcButton"

            app:tint="?android:attr/textColorPrimary"

            android:layout_marginStart="@dimen/button_margin"
            android:padding="@dimen/btn_padding_default"

            android:src="@drawable/four_ic"/>

        <ImageButton
            android:id="@+id/number_5"
            style="@style/Widget.Calculator.CalcButton"

            app:tint="?android:attr/textColorPrimary"

            android:padding="@dimen/btn_padding_default"

            android:src="@drawable/five_ic"/>

        <ImageButton
            android:id="@+id/number_6"
            style="@style/Widget.Calculator.CalcButton"

            app:tint="?android:attr/textColorPrimary"

            android:padding="@dimen/btn_padding_default"

            android:src="@drawable/six_ic"/>

        <ImageButton
            android:id="@+id/subtract"
            style="@style/Widget.Calculator.CalcButton"

            android:padding="@dimen/btn_padding_default"

            android:src="@drawable/subtract_ic" />

        <ImageButton
            android:id="@+id/number_1"
            style="@style/Widget.Calculator.CalcButton"

            app:tint="?android:attr/textColorPrimary"

            android:padding="@dimen/btn_padding_default"
            android:layout_marginStart="@dimen/button_margin"

            android:src="@drawable/one_ic" />

        <ImageButton
            android:id="@+id/number_2"
            style="@style/Widget.Calculator.CalcButton"

            app:tint="?android:attr/textColorPrimary"

            android:padding="@dimen/btn_padding_default"

            android:src="@drawable/two_ic" />

        <ImageButton
            android:id="@+id/number_3"
            style="@style/Widget.Calculator.CalcButton"

            app:tint="?android:attr/textColorPrimary"

            android:padding="@dimen/btn_padding_default"

            android:src="@drawable/three_ic" />

        <ImageButton
            android:id="@+id/add"
            style="@style/Widget.Calculator.CalcButton"

            android:padding="@dimen/btn_padding_default"

            android:src="@drawable/add_ic" />

        <ImageButton
            android:id="@+id/change_layout"
            style="@style/Widget.Calculator.CalcButton"

            android:padding="@dimen/btn_padding_default"
            android:layout_marginStart="@dimen/button_margin"

            android:src="@drawable/expand_ic" />

        <ImageButton
            android:id="@+id/number_0"
            style="@style/Widget.Calculator.CalcButton"

            app:tint="?android:attr/textColorPrimary"

            android:padding="@dimen/btn_padding_default"

            android:src="@drawable/zero_ic" />

        <ImageButton
            android:id="@+id/dot"
            style="@style/Widget.Calculator.CalcButton"

            app:tint="?android:attr/textColorPrimary"

            android:padding="@dimen/btn_padding_default"

            android:src="@drawable/dot_ic"/>

        <ImageButton
            android:id="@+id/equal"
            style="@style/Widget.Calculator.CalcButton"

            android:padding="@dimen/btn_padding_equal_default"

            android:src="@drawable/equal_ic" />
    </GridLayout>
</layout>