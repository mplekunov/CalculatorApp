<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="calculatorFragment"
            type="com.example.calculator.view.CalculatorFragment" />
        <variable
            name="viewModel"
            type="com.example.calculator.viewmodel.CalculatorViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.CalculatorFragment">

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/divider"

            android:gravity="bottom"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/input"
                style="@style/Widget.Calculator.TextView"
                android:gravity="center|end|bottom"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="?android:textColorPrimary"

                android:textSize="40dp"

                android:clickable="true"
                android:linksClickable="true"

                tools:text="5 + 5 + 7 + 10 * 7 / 9"

                android:onTextChanged="@{() -> calculatorFragment.onInputChange()}" />

            <TextView
                android:id="@+id/output"
                style="@style/Widget.Calculator.TextView"
                android:gravity="center|end"

                android:textSize="20dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="?android:textColorSecondary"

                android:breakStrategy="high_quality"
                android:hyphenationFrequency="none"

                android:maxLines="1"
                tools:text="= 1023123" />

        </LinearLayout>
        <View
            android:id="@+id/divider"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/calculator_layout"

            style="@style/Widget.Calculator.Divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <FrameLayout
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:id="@+id/calculator_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <GridLayout
                android:id="@+id/calculator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:columnCount="4"
                android:rowCount="5">

                <Button
                    android:id="@+id/deleteAll"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/all_cleared"
                    android:textColor="@color/calc_image_button_normal"
                    android:textSize="@dimen/button_ac_text_size"
                    android:layout_marginStart="@dimen/button_margin"
                    android:layout_marginTop="@dimen/button_margin"
                    style="@style/Widget.Calculator.CalcButton"/>

                <ImageButton
                    android:id="@+id/delete"
                    android:src="@drawable/ic_delete"
                    android:padding="@dimen/button_icon_padding"
                    android:layout_marginTop="@dimen/button_margin"
                    style="@style/Widget.Calculator.CalcButton" />

                <ImageButton
                    android:id="@+id/percent_sign"
                    android:text="%"
                    android:src="@drawable/ic_percent"
                    android:layout_marginTop="@dimen/button_margin"
                    android:padding="@dimen/button_icon_padding"
                    style="@style/Widget.Calculator.CalcButton" />

                <ImageButton
                    android:id="@+id/division_sign"
                    android:text="/"
                    android:src="@drawable/ic_divide"
                    android:layout_marginTop="@dimen/button_margin"
                    android:padding="@dimen/button_icon_padding"
                    style="@style/Widget.Calculator.CalcButton" />

                <Button
                    android:id="@+id/number_7"
                    android:text="@string/number_7"
                    android:textSize="@dimen/button_text_size"
                    android:layout_marginStart="@dimen/button_margin"
                    style="@style/Widget.Calculator.CalcButton"/>

                <Button
                    android:id="@+id/number_8"
                    android:text="@string/number_8"
                    android:textSize="@dimen/button_text_size"
                    style="@style/Widget.Calculator.CalcButton"/>

                <Button
                    android:id="@+id/number_9"
                    android:text="@string/number_9"
                    android:textSize="@dimen/button_text_size"
                    style="@style/Widget.Calculator.CalcButton"/>

                <ImageButton
                    android:id="@+id/multiplication_sign"
                    android:text="*"
                    android:src="@drawable/ic_multiply"
                    android:padding="@dimen/button_icon_padding"
                    style="@style/Widget.Calculator.CalcButton"/>

                <Button
                    android:id="@+id/number_4"
                    android:text="@string/number_4"
                    android:textSize="@dimen/button_text_size"
                    android:layout_marginStart="@dimen/button_margin"
                    style="@style/Widget.Calculator.CalcButton"/>

                <Button
                    android:id="@+id/number_5"
                    android:text="@string/number_5"
                    android:textSize="@dimen/button_text_size"
                    style="@style/Widget.Calculator.CalcButton"/>

                <Button
                    android:id="@+id/number_6"
                    android:text="@string/number_6"
                    android:textSize="@dimen/button_text_size"
                    style="@style/Widget.Calculator.CalcButton"/>

                <ImageButton
                    android:id="@+id/subtraction_sign"
                    android:text="-"
                    android:src="@drawable/ic_minus"
                    android:padding="@dimen/button_icon_padding"
                    style="@style/Widget.Calculator.CalcButton"/>

                <Button
                    android:id="@+id/number_1"
                    android:text="@string/number_1"
                    android:textSize="@dimen/button_text_size"
                    android:layout_marginStart="@dimen/button_margin"
                    style="@style/Widget.Calculator.CalcButton"/>

                <Button
                    android:id="@+id/number_2"
                    android:text="@string/number_2"
                    android:textSize="@dimen/button_text_size"
                    style="@style/Widget.Calculator.CalcButton"/>

                <Button
                    android:id="@+id/number_3"
                    android:text="@string/number_3"
                    android:textSize="@dimen/button_text_size"
                    style="@style/Widget.Calculator.CalcButton"/>

                <ImageButton
                    android:id="@+id/addition_sign"
                    android:src="@drawable/ic_plus"
                    android:padding="@dimen/button_icon_padding"
                    style="@style/Widget.Calculator.CalcButton"/>

                <ImageButton
                    android:id="@+id/change_layout"
                    android:src="@drawable/ic_expand"
                    android:layout_marginStart="@dimen/button_margin"
                    android:padding="@dimen/button_icon_padding"
                    style="@style/Widget.Calculator.CalcButton"/>

                <Button
                    android:id="@+id/number_0"
                    android:text="@string/number_0"
                    android:textSize="@dimen/button_text_size"
                    style="@style/Widget.Calculator.CalcButton"/>

                <Button
                    android:id="@+id/dot_sign"
                    android:text="@string/dot_sign"
                    android:textSize="@dimen/button_text_size"
                    style="@style/Widget.Calculator.CalcButton"/>

                <ImageButton
                    android:id="@+id/equal_sign"
                    android:src="@drawable/ic_equal"
                    android:padding="@dimen/button_icon_padding"
                    style="@style/Widget.Calculator.CalcButton"/>
            </GridLayout>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>