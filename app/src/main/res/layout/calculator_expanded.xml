<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <GridLayout
        android:columnCount="5"
        android:rowCount="6"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/power"
            style="@style/Widget.Calculator.ImageButton"

            app:tint="@color/calc_operation_button"

            android:layout_marginStart="@dimen/button_margin"
            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/power_ic"/>

        <ImageButton
            android:id="@+id/log"
            style="@style/Widget.Calculator.ImageButton"

            app:tint="@color/calc_function_button"

            android:padding="18dp"

            android:src="@drawable/log_ic"/>

        <ImageButton
            android:id="@+id/ln"
            style="@style/Widget.Calculator.ImageButton"

            app:tint="@color/calc_function_button"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/ln_ic"/>

        <ImageButton
            android:id="@+id/left_parenthesis"
            style="@style/Widget.Calculator.ImageButton"

            app:tint="@color/calc_operation_button"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/left_parenthesis_ic"/>

        <ImageButton
            android:id="@+id/right_parenthesis"
            style="@style/Widget.Calculator.ImageButton"

            app:tint="@color/calc_operation_button"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/right_parenthesis_ic" />

        <ImageButton
            android:id="@+id/square_root"
            style="@style/Widget.Calculator.ImageButton"

            app:tint="@color/calc_function_button"

            android:layout_marginStart="@dimen/button_margin"
            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/square_root_ic"/>

        <Button
            android:id="@+id/clearAll"
            style="@style/Widget.Calculator.ImageButton"

            android:textColor="@color/calc_clear_all_button"

            android:text="@string/all_cleared"
            android:fontFamily="sans-serif-condensed"
            android:textSize="@dimen/button_ac_text_size" />


        <ImageButton
            android:id="@+id/clear"
            style="@style/Widget.Calculator.ImageButton"

            app:tint="@color/calc_clear_button"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/clear_ic"/>

        <ImageButton
            android:id="@+id/percent"
            style="@style/Widget.Calculator.ImageButton"

            app:tint="@color/calc_operation_button"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/percentage_ic"/>

        <ImageButton
            android:id="@+id/divide"
            style="@style/Widget.Calculator.ImageButton"

            app:tint="@color/calc_operation_button"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/divide_ic" />

        <ImageButton
            android:id="@+id/factorial"
            style="@style/Widget.Calculator.ImageButton"

            app:tint="@color/calc_function_button"

            android:layout_marginStart="@dimen/button_margin"
            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/factorial_ic"/>

        <ImageButton
            android:id="@+id/number_7"
            style="@style/Widget.Calculator.ImageButton"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/seven_ic"/>

        <ImageButton
            android:id="@+id/number_8"
            style="@style/Widget.Calculator.ImageButton"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/eight_ic"/>

        <ImageButton
            android:id="@+id/number_9"
            style="@style/Widget.Calculator.ImageButton"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/nine_ic" />

        <ImageButton
            android:id="@+id/multiply"
            style="@style/Widget.Calculator.ImageButton"

            app:tint="@color/calc_operation_button"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/multiply_ic" />

        <ImageButton
            android:id="@+id/squared"
            style="@style/Widget.Calculator.ImageButton"

            app:tint="@color/calc_operation_button"

            android:layout_marginStart="@dimen/button_margin"
            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/squared_ic"/>

        <ImageButton
            android:id="@+id/number_4"
            style="@style/Widget.Calculator.ImageButton"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/four_ic"/>

        <ImageButton
            android:id="@+id/number_5"
            style="@style/Widget.Calculator.ImageButton"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/five_ic"/>

        <ImageButton
            android:id="@+id/number_6"
            style="@style/Widget.Calculator.ImageButton"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/six_ic"/>

        <ImageButton
            android:id="@+id/subtract"
            style="@style/Widget.Calculator.ImageButton"

            app:tint="@color/calc_operation_button"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/subtract_ic" />

        <ImageButton
            android:id="@+id/pi"
            style="@style/Widget.Calculator.ImageButton"

            android:layout_marginStart="@dimen/button_margin"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/pi_ic"/>

        <ImageButton
            android:id="@+id/number_1"
            style="@style/Widget.Calculator.ImageButton"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/one_ic"/>

        <ImageButton
            android:id="@+id/number_2"
            style="@style/Widget.Calculator.ImageButton"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/two_ic"/>

        <ImageButton
            android:id="@+id/number_3"
            style="@style/Widget.Calculator.ImageButton"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/three_ic"/>

        <ImageButton
            android:id="@+id/add"
            style="@style/Widget.Calculator.ImageButton"

            app:tint="@color/calc_operation_button"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/add_ic" />

        <ImageButton
            android:id="@+id/change_layout"
            style="@style/Widget.Calculator.ImageButton"

            app:tint="@color/calc_function_button"

            android:layout_marginStart="@dimen/button_margin"
            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/expand_ic" />

        <ImageButton
            android:id="@+id/epsilon"
            style="@style/Widget.Calculator.ImageButton"

            android:padding="18dp"

            android:src="@drawable/epsilon_ic" />

        <ImageButton
            android:id="@+id/number_0"
            style="@style/Widget.Calculator.ImageButton"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/zero_ic"/>

        <ImageButton
            android:id="@+id/dot"
            style="@style/Widget.Calculator.ImageButton"

            android:padding="@dimen/btn_padding_expanded"

            android:src="@drawable/dot_ic"/>

        <ImageButton
            android:id="@+id/equal"
            style="@style/Widget.Calculator.ImageButton"

            app:tint="@color/calc_function_button"

            android:padding="@dimen/btn_padding_equal_expanded"

            android:src="@drawable/equal_ic" />
    </GridLayout>
</layout>